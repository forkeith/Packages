%YAML 1.2
---
name: T-SQL (PyODBC)
scope: source.sql.tsql.pyodbc
version: 2

extends: Packages/SQL/TSQL.sublime-syntax

variables:
  identifier_for_lookahead: |-
    (?x:
      (?:(?:\b\w+|\[[^]]+\])\.)*
      (?:(?:\b|:)\w+|\[[^]]+\])
    #| \?
    )

contexts:

  identifier-part:
    - meta_prepend: true
    - match: ':(?=\w)'
      scope: punctuation.definition.variable.pyodbc
    - match: '\?'
      scope: variable.parameter.pyodbc
